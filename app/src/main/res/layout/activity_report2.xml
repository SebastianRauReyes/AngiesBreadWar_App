<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.breadwar.angies.angiesbreadwar_app.activity.Report2Activity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_login_dark"
        android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/imageView_foto"
                    android:layout_weight="8"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <EditText
                    android:id="@+id/imageView_comentario"
                    android:hint="Comentario"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <Button
                    android:id="@+id/button_tomar_foto"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:textSize="20sp"
                    android:background="@color/primary_dark"
                    android:text="Tomar Foto"
                    android:drawableStart="@mipmap/ic_camera_report"
                    android:textAlignment="textStart"
                    android:paddingStart="80dp"
                    android:onClick="takePicture"
                    android:textColor="@color/primary_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_enviar_foto"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="#B40404"
                        android:text="Reportar"
                        android:textSize="18sp"
                        android:onClick="Reportar"
                        android:textColor="#ffffff"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="10dp"/>

                    <ImageButton
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_go_back"
                        android:onClick="regresar"
                        android:scaleType="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="25dp"/>

                </LinearLayout>



            </LinearLayout>

</RelativeLayout>
